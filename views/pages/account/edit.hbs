<form class="container mt-5" action="/account/edit" method="POST">
    <h1><span class="far fa-edit" style="color:black"></span> Edit</h1>
    {{#if content}}
    <input type="hidden" name="id" value="{{content.id}}" />
    <div class="row">
        <div class="form-group col-lg-3">
            <label for="tagsInput">Tags</label>
            <input class="form-control" id="tagsInput" value="{{content.tags}}" type="text" name="tags" placeholder="java,bubble sort"
                autocomplete="off" required>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-12">
            <h4><label for="snippetInput">Snippet</label></h4>
            <textarea class="form-control" id="snippetInput" rows="20" name="snippet" style=" resize: none" required>{{content.snippet}}</textarea>
        </div>
    </div>
    <div class="row">
        <div class="form-group col-lg-3">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>
    {{/if}}
</form>